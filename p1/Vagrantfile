# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # The definition of the first VM (Server)
  config.vm.define 'aadnane' do |vagrant1|

    # The Operating system
    vagrant1.vm.box = "ubuntu/jammy64"

    # Setting the hostname
    vagrant1.vm.hostname = "aadnaneS"

    # The system spec
    vagrant1.vm.provider "virtualBox" do |vm|
      vm.memory = 512
      vm.cpu = 1
      vm.name = "aadnane"
    end

    # The shared folder (ps: used to retrieve the token)
    vagrant1.vm.synced_folder "./confs", "/vagrant_data"

    # The netwrok setting
    vagrant1.vm.network "public_network", ip: "192.168.56.110", bridge: "ens33"
    vagrant1.vm.network "forwarded_port", guest: 6443, host: 6443

    # The startup script
    vagrant1.vm.provision "shell", path: "./scripts/installServer.sh"
  end

  # The definition of the second VM (Server Worker)
  config.vm.define 'yait-iaz' do |vagrant2|

    # The Operating system
    vagrant2.vm.box = "ubuntu/jammy64"

    # Setting the hostname
    vagrant2.vm.hostname = "yait-iazSW"

    # The system spec
    vagrant2.vm.provider "virtualBox" do |vm|
      vm.memory = 512
      vm.cpu = 1
      vm.name = "yait-iaz"
    end

    # The shared folder (ps: used to retrieve the token)
    vagrant2.vm.synced_folder "./confs", "/vagrant_data"

    # The netwrok setting
    vagrant2.vm.network "public_network", ip: "192.168.56.111", bridge: "ens33"

    # The startup script
    vagrant2.vm.provision "shell", path: "./scripts/installServerWorker.sh"
  end

end
